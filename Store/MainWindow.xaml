<Window x:Class="Store.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Store"
        mc:Ignorable="d"
        Title="Store" Height="550" Width="800">
    <Window.Resources>
        <ResourceDictionary Source="Style.xaml"/>
    </Window.Resources>
    <StackPanel>
        <Border BorderBrush="Black" BorderThickness="1">
            <DockPanel>
                <Button x:Name="Login" Content="Authorize" Margin="0"/>
                <Button x:Name="Shop" Content="Shop" Margin="0"/>
                <Image x:Name="Logo" HorizontalAlignment="Right" Width="50" Height="50" Source="C:\Users\ipetr\Downloads\product.jpg" Margin="0"/>
            </DockPanel>
        </Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.5*"/>
            </Grid.RowDefinitions>
            <Image Grid.Row="0" Grid.Column="0" Source="C:\Users\ipetr\Downloads\product.jpg"/>
            <Image Grid.Row="0" Grid.Column="1" Source="C:\Users\ipetr\Downloads\product.jpg"/>
            <Image Grid.Row="0" Grid.Column="2" Source="C:\Users\ipetr\Downloads\product.jpg"/>
            <Image Grid.Row="0" Grid.Column="3" Source="C:\Users\ipetr\Downloads\product.jpg"/>
            <Image Grid.Row="2" Grid.Column="0" Source="C:\Users\ipetr\Downloads\product.jpg"/>
            <Image Grid.Row="2" Grid.Column="1" Source="C:\Users\ipetr\Downloads\product.jpg"/>
            <Image Grid.Row="2" Grid.Column="2" Source="C:\Users\ipetr\Downloads\product.jpg"/>
            <Image Grid.Row="2" Grid.Column="3" Source="C:\Users\ipetr\Downloads\product.jpg"/>
            <Button Grid.Row="1" Grid.Column="0" Name="Image1" Content="Image1" />
            <Button Grid.Row="1" Grid.Column="1" Name="Image2" Content="Image2"/>
            <Button Grid.Row="1" Grid.Column="2" Name="Image3" Content="Image3"/>
            <Button Grid.Row="1" Grid.Column="3" Name="Image4" Content="Image4"/>
            <Button Grid.Row="4" Grid.Column="0" Name="Image5" Content="Image5"/>
            <Button Grid.Row="4" Grid.Column="1" Name="Image6" Content="Image6"/>
            <Button Grid.Row="4" Grid.Column="2" Name="Image7" Content="Image7"/>
            <Button Grid.Row="4" Grid.Column="3" Name="Image8" Content="Image8"/>
        </Grid>
    </StackPanel>
</Window>
