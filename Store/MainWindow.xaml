<Window x:Class="Store.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Store"
        mc:Ignorable="d"
        Title="Store" Height="800" Width="800">
    <Window.Resources>
        <ResourceDictionary Source="Style.xaml" />
    </Window.Resources>

    <DockPanel LastChildFill="True">
        <StackPanel x:Name="Menu" DockPanel.Dock="Top" Orientation="Horizontal">
            <Button Content="Магазин" />
            <Button Content="Авторизоваться" />
        </StackPanel>

        <StackPanel DockPanel.Dock="Bottom" Orientation="Vertical">
            <Label x:Name="StatusBar" Content="Statys:" />
        </StackPanel>

        <Grid x:Name="Body">
            <!-- -->
        </Grid>
    </DockPanel>
</Window>