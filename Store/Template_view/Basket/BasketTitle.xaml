<UserControl x:Class="Store.Template_view.Basket.BasketTitle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Store.Template_view.Basket"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="1300">
    <UserControl.Resources>
        <ResourceDictionary Source="..\..\Style.xaml"/>
    </UserControl.Resources>
    <DockPanel
        Height="90" Width="1300"
        LastChildFill="True"
        Background="Gray">
        <Grid
            DockPanel.Dock="Bottom"
            Height="45">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>
            <Border
                Grid.Column="0"
                Style="{StaticResource ResourceKey=Style_Border}">
                <Label
                    Content="#"
                    Style="{StaticResource ResourceKey=Style_TitleTable}"/>
            </Border>
            <Border
                Grid.Column="1"
                Style="{StaticResource ResourceKey=Style_Border}">
                <Label
                    Content="Наименование"
                    Style="{StaticResource ResourceKey=Style_TitleTable}"/>
            </Border>
            <Border
                Grid.Column="2"
                Style="{StaticResource ResourceKey=Style_Border}">
                <Label
                    Content="Доступно"
                    Style="{StaticResource ResourceKey=Style_TitleTable}"/>
            </Border>
            <Border
                Grid.Column="3"
                Style="{StaticResource ResourceKey=Style_Border}">
                <Label
                    Content="Количесво"
                    Style="{StaticResource ResourceKey=Style_TitleTable}"/>
            </Border>
            <Border
                Grid.Column="4"
                Style="{StaticResource ResourceKey=Style_Border}">
                <Label
                    Content="Цена"
                    Style="{StaticResource ResourceKey=Style_TitleTable}"/>
            </Border>
            <Border
                Grid.Column="5"
                Style="{StaticResource ResourceKey=Style_Border}">
                <Label
                    Content="Итого"
                    Style="{StaticResource ResourceKey=Style_TitleTable}"/>
            </Border>
            <Border
                Grid.Column="6"
                Style="{StaticResource ResourceKey=Style_Border}">
            </Border>
        </Grid>
        <StackPanel
            Orientation="Horizontal"
            VerticalAlignment="Center"
            HorizontalAlignment="Center">
            <Label
                Content="КАРЗИНА № "
                Style="{StaticResource ResourceKey=Style_Title}"/>
            <Label
                x:Name="Label_BasketID"
                Content="{Binding BasketID}"
                Style="{StaticResource ResourceKey=Style_Title}"/>
            <Label
                Content=" от "
                Style="{StaticResource ResourceKey=Style_Title}"/>
            <Label
                x:Name="Label_BasketDate"
                Content="{Binding BasketDate}"
                Style="{StaticResource ResourceKey=Style_Title}"/>
        </StackPanel>
    </DockPanel>
</UserControl>
